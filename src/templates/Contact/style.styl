.header
    grid-area: hd;
    position: fixed;
    background-color: initial;
    min-width: 100vw;
    z-index: 0;
    height: 120px;

    @media screen and (max-width: 600px)
        height: 80px;

.body
    grid-area: bd;
    overflow: hidden auto;
    margin-top: 120px;

    @media screen and (max-width: 600px)
        margin-top: 80px;

.navbar
    grid-area: nav;
    position: fixed;
    z-index: 1001;
    background-color: #FFFFFF;
    height: 100%;
    transition-property: transform;
    transition-duration: 0.5s;

.body::-webkit-scrollbar
    display: none;