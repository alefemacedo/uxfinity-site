.menu-item
    line-height: 20px;
    text-align: center;
    padding: 10px;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    
    a
        font-size: 14px;
        color: black_1;
        display: inline-block;
        vertical-align: middle;
        text-decoration: none;

    .button
        display: flex;
        margin: -10px -10px 0px;
        padding: 10px 10px 0px;
        width: 100%;

        a
            margin-right: 15px;
        
        .height-100
            height: 100%;

        span
            display: flex;
            align-items: center;
        
        @media screen and (min-width: 1200px)
            margin: -26px -26px 0px;
            padding: 26px 26px 0px;

    & .selected
        background-color: #f6f6f6;
        padding-bottom: 10px;

        @media screen and (min-width: 600px)
            background-color: #FFFFFF;
            margin-bottom: 0px;
        
        @media screen and (min-width: 1200px)
            padding-bottom: 0px;

    .submenus
        margin-bottom: -10px;

        .submenu-item
            padding: 5px;
        
        @media screen and (min-width: 600px)
            width: 100%;
            margin-top: 20px;
            position: absolute;
            background-color: #FFFFFF;

    .skate
        position: absolute;
        margin-top: 10px;
        display: none;

    @media screen and (min-width: 600px)
        .skate
            display: inline;

    @media screen and (min-width: 1200px)
        padding: 26px;
