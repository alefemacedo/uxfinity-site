.body
    overflow: hidden auto;
    position: relative;
    background-color: #0D0048;
    height: 100vh;
    width: 100vw;
    margin-top: 0px;

    &::-webkit-scrollbar
        display: none;
    
    &:before
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@/assets/img/fundo.png');
        background-repeat: no-repeat;
        background-size: cover;
        background-color: #0D0048;
        background-blend-mode: multiply;
        opacity: 0.6;
        z-index: -1;
    
    .logo
        position: absolute;
        top: 83px;
        left: 27px;

        @media screen and (min-width: 576px)
            left: 55px;

    .content
        font-family: "Ruda", sans-serif;
        text-transform: none;
        position: relative;
        z-index: 1;
        color: #E3DFF9;
        margin-top: 289px;

        img
            position: absolute;
            z-index: -1;

        .stars
            display: flex;
            justify-content: center;
        
        .planet-1
            top: -100px;
            right: 40px;
            width: 45px;

            @media screen and (min-width: 768px)
                top: -120px;
                right: 178px;
                width: auto;
        
        .planet-2
            top: 90px;
            right: 55px;
            width: 20px;

            @media screen and (min-width: 768px)
                top: 90px;
                right: 202px;
                width: auto;

        .title
            display: flex;
            justify-content: center
            margin-bottom: 60px;
            text-align: center;

            .label
                font-size: 40px;
                line-height: 38px;

        .countdown
            &-title
                text-align: center;
                margin-bottom: 20px;
                font-size: 30px;

            &-timer
                display: flex;
                justify-content: center;

                .timer
                    display: flex;
                    flex-direction: row;
                    justify-content: space-between;
                    width: 265px;
                    font-size: 26px;

                    div
                        display: flex;
                        flex-direction: column;

                        span
                            text-align: center;

    .footer
        position: absolute;
        display: flex;
        font-family: "Bebas neue", sans-serif;
        justify-content: flex-end;
        width: 100%;
        bottom: 0px;
        flex-direction: column;

        @media (min-width: 576px)
            flex-direction: row;

        .social-media
            margin: auto 102px 48px auto;

            a
                margin-right: 22px;

                &:last-child
                    margin-right: 0px;
            
            @media (min-width: 576px)
                margin-right: 122px;

        .wave
            position: absolute;
            opacity: 0.2;
            bottom: 0px;
            left: 0px;