.footer
    width: 100%;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    font-family: 'Poppins', sans-serif;
    text-transform: none;
    background-color: #0D0048;
    color: #EDEBF8;
    padding: 23px;

    &:before
        content: ' ';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('@/assets/svg/footer_mark.svg');
        background-repeat: no-repeat;
        background-size: cover;
        background-blend-mode: luminosity;
        background-color: #0D0048
        opacity: 0.04;
    
    .footer-boxes
        position: absolute;
        width: 100%;
        bottom: 0;
        left: 0;

    .contact-info
        position: relative;
        display: flex;
        flex-direction: column;

        .info
            max-width: 434px;

            .title
                font-size: 22px;
                line-height: 26px;
                letter-spacing: 0.01em;
                margin-bottom: 40px;
            
            .phone, .email
                font-size: 14px;
                line-height: 17px;

        .social-media
            display: flex;
            justify-content: flex-start;
            margin-top: 40px;

            a
                margin-right: 20px;

                &:last-child
                    margin-right: 0px;

    .quote
        position: relative;
        max-width: 295px;

        .text
            font-size: 60px;
            line-height: 60px;
            margin-bottom: 50px;

        .circled-text
            position: absolute;
            top: -40px;
            left: 200px;
    
    @media screen and (min-width: 768px)
        flex-direction: row;
        height: 434px;

        .quote
            margin-right: 180px;

            .text
                font-size: 84px;
                line-height: 84px;
                max-width: 413px;
                margin-top: 92px;
            
            .circled-text
                top: 68px;
                left: 303px;
    
    @media screen and (min-width: 1024px)
        padding: 0px;

        .contact-info
            margin-left: 206px;
            margin-top: 68px;
            margin-bottom: 154px;

        .quote
            margin-right: 200px;
